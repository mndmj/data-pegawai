{
  "plugins": ["prettier-plugin-blade"],
  "overrides": [
    {
      "files": [
        "*.blade.php"
      ],
      "options": {
        "parser": "blade",
        "bracketSameLine": true,
        "singleQuote": true
      }
    }
  ],
  "[blade]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.documentSelectors": ["**/*.blade.php"]
}